{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "vitest/globals",
      "@types/react",
      "@types/react-dom",
      "@types/react-test-renderer"
    ],
    "jsx": "react-jsx",
    "resolveJsonModule": true
  },
  "include": [
    "tasks/**/*.ts",
    "tasks/**/*.tsx",
    "tests_ts/**/*.ts",
    "tests_ts/**/*.tsx",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
